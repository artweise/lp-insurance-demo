<section id='how' class='py-16 md:py-20 bg-ink text-white'>
  <div class='max-w-6xl mx-auto px-4'>
    <h2 class='text-3xl md:text-4xl font-semibold'>{{data.title}}</h2>
    <p class='mt-3 text-slate-300 max-w-3xl'>{{data.text}}</p>

    <div class='mt-10 grid md:grid-cols-3 gap-8'>
      {{#each data.steps}}
        <div class='bg-white/5 rounded-xl p-6'>
          <div class='text-4xl font-semibold'>{{n}}</div>
          <h3 class='mt-2 text-xl font-semibold'>{{title}}</h3>
          <p class='mt-2 text-slate-300'>{{text}}</p>
        </div>
      {{/each}}
    </div>

    <a href='#calculator' class='btn-primary mt-8 inline-flex'>{{data.cta}}</a>
  </div>
</section>