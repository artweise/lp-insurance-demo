<section id="why" class="py-16">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-4 gap-6">
    {{#each items}}
    <div class="rounded-xl p-6 border {{#if (eq tone 'sky')}}bg-sky{{else}}bg-white{{/if}}">
      <h3 class="text-lg font-semibold">{{title}}</h3>
      <p class="mt-2 text-slate-600">{{text}}</p>
      <a href="#" class="mt-3 inline-block text-link underline">{{cta}}</a>
    </div>
    {{/each}}
  </div>
</section>
